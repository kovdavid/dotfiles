#!/bin/bash

if [[ "$@" == "show" ]] ; then
    cat ~/.git_save
    exit
fi

PWD=$(pwd)
DATE=$(date '+%F %T')
BRANCH=$(git rev-parse --abbrev-ref HEAD)
REV=$(git rev-parse --short HEAD)

LOG="$DATE $PWD REV:$REV BRANCH:$BRANCH"
if [ "$BRANCH" != $(git main-branch) ] ; then
    LOG="$LOG MAIN_REV:$(git rev-parse --short $(git main-branch))"
fi
LOG="$LOG NOTE:$@"

echo "$LOG" >> ~/.git_save
