#!/bin/bash

if tmux list-sessions ; then
    WS=$(i3_current_workspace_number)
    for i in {1..10}; do
        NAME="WS $WS/$i"
        tmux has -t="$NAME" &>/dev/null
        if [[ $? != 0 ]] ; then
            tmux new -s "$NAME"
            break
        fi
    done
else
    HOSTNAME=$(hostname)
    tmux new -s "$HOSTNAME"
fi
