#!/bin/bash

if [ $# -gt 0 ] ; then
    git "$@"
    exit $!
fi

echo -n "ü´í branch:     "
git rev-parse --abbrev-ref HEAD

echo -n "üîπ revision:   "
git rev-parse --short HEAD

# echo -n "dirty:      "
# git diff-index --quiet HEAD -- && echo "" || echo "*"

echo -n "üêô stash size: "
git stash list 2>/dev/null | wc -l

echo ""

git log -1 --oneline

echo ""

STASHED=$(git diff --name-only --cached)
if [ -n "$STASHED" ] ; then
    echo "‚úÖ Stashed files:"
    echo -en "\e[32m"
    echo -e "$STASHED"
    echo -en "\e[0m"
fi

CHANGED=$(git diff --name-only)
if [ -n "$CHANGED" ] ; then
    [[ -n "$STASHED" ]] && echo ""

    echo "üîÑ Changed files:"
    echo -e "$CHANGED"
fi

UNTRACKED=$(git ls-files --others --exclude-standard)
if [ -n "$UNTRACKED" ] ; then
    [[ -n "$STASHED" || -n "$CHANGED" ]] && echo ""

    echo "üîç Untracked files:"
    echo -en "\e[31m"
    echo -e "$UNTRACKED"
    echo -en "\e[0m"
fi
