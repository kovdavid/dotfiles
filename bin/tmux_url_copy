#!/usr/bin/env bash

exec > >(tee -a /tmp/$(basename $0)) 2>&1

COMMON="tmux capture-pane -J -p -e | grep -oE '(https?)://[^\">]+' | uniq | fzf-tmux -d20 --no-preview"

if [[ $(uname -a) == Darwin* ]] ; then
    eval $COMMON | pbcopy
else
    eval $COMMON | xclip -in -filter -selection primary | xclip -in -selection clipboard
fi

